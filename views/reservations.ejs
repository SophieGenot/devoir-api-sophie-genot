<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Réservations</title>
  <style>
    table {
      border-collapse: collapse;
      width: 90%;
      margin: 20px auto;
    }
    th, td {
      border: 1px solid #aaa;
      padding: 8px 12px;
      text-align: left;
    }
    th {
      background-color: #f0f0f0;
    }
    h1 {
      text-align: center;
    }
  </style>
</head>
<body>
  <h1>Liste des Réservations</h1>
  <table>
    <thead>
      <tr>
        <th>Catway</th>
        <th>Client</th>
        <th>Bateau</th>
        <th>Date début</th>
        <th>Date fin</th>
      </tr>
    </thead>
    <tbody>
      <% reservations.forEach(r => { %>
        <tr>
          <td><%= r.catwayNumber %></td>
          <td><%= r.clientName %></td>
          <td><%= r.boatName %></td>
          <td><%= new Date(r.startDate).toLocaleDateString('fr-FR') %></td>
          <td><%= new Date(r.endDate).toLocaleDateString('fr-FR') %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
